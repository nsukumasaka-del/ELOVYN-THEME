{% endcomment %}

{% comment %}
  Press Marquee - replica of original React app (6 items, repeated 4x for seamless loop)
{% endcomment %}
<section class="py-12 bg-charcoal overflow-hidden border-y border-border/20">
  <div class="relative">
    <div class="flex animate-marquee">
      {%- for i in (1..4) -%}
        {%- for block in section.blocks -%}
          <div class="flex items-center gap-8 px-12 flex-shrink-0">
            <span class="text-lg md:text-xl font-bold text-foreground/40 tracking-wider whitespace-nowrap">
              {{ block.settings.press_name }}
            </span>
            <span class="text-sm md:text-base text-foreground/70 italic whitespace-nowrap">
              "{{ block.settings.quote }}"
            </span>
            <span class="text-foreground/20">â€¢</span>
          </div>
        {%- endfor -%}
      {%- endfor -%}
    </div>
  </div>
</section>

