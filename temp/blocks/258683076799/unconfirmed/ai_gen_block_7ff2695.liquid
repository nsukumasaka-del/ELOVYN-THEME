{% doc %}
  @prompt
    Please add a search feature on my store. Place it on the top right of the store., Please change the style of the search and make it modern. Make only the search icon ro appear and vissible. The search bar to appear after clicking the icon
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-search-{{ ai_gen_id }} {
    position: relative;
    display: inline-block;
  }

  .ai-search-icon-button-{{ ai_gen_id }} {
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease;
  }

  .ai-search-icon-button-{{ ai_gen_id }}:hover {
    transform: scale(1.1);
  }

  .ai-search-icon-button-{{ ai_gen_id }} svg {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    stroke: {{ block.settings.icon_color }};
    fill: none;
  }

  .ai-search-overlay-{{ ai_gen_id }} {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    z-index: 999;
  }

  .ai-search-overlay-{{ ai_gen_id }}.active {
    opacity: 1;
    visibility: visible;
  }

  .ai-search-modal-{{ ai_gen_id }} {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0.9);
    width: 90%;
    max-width: {{ block.settings.search_width }}px;
    background-color: {{ block.settings.search_bg_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: 30px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    z-index: 1000;
  }

  .ai-search-modal-{{ ai_gen_id }}.active {
    opacity: 1;
    visibility: visible;
    transform: translate(-50%, -50%) scale(1);
  }

  .ai-search-header-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }

  .ai-search-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-search-close-{{ ai_gen_id }} {
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .ai-search-close-{{ ai_gen_id }}:hover {
    opacity: 1;
  }

  .ai-search-close-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
  }

  .ai-search-form-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-search-input-wrapper-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    align-items: center;
  }

  .ai-search-input-{{ ai_gen_id }} {
    width: 100%;
    padding: 16px 50px 16px 20px;
    font-size: {{ block.settings.input_size }}px;
    border: 2px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background-color: {{ block.settings.input_bg_color }};
    color: {{ block.settings.text_color }};
    transition: border-color 0.2s ease;
  }

  .ai-search-input-{{ ai_gen_id }}:focus {
    outline: none;
    border-color: {{ block.settings.input_focus_color }};
  }

  .ai-search-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.placeholder_color }};
  }

  .ai-search-submit-{{ ai_gen_id }} {
    position: absolute;
    right: 8px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.icon_color }};
    transition: transform 0.2s ease;
  }

  .ai-search-submit-{{ ai_gen_id }}:hover {
    transform: scale(1.1);
  }

  .ai-search-submit-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
    stroke: {{ block.settings.icon_color }};
    fill: none;
  }

  @media screen and (max-width: 749px) {
    .ai-search-modal-{{ ai_gen_id }} {
      padding: 20px;
      width: 95%;
    }

    .ai-search-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.9);
    }

    .ai-search-input-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.input_size }}px * 0.9);
      padding: 14px 45px 14px 16px;
    }
  }
{% endstyle %}

<search-modal-{{ ai_gen_id }} class="ai-search-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <button
    class="ai-search-icon-button-{{ ai_gen_id }}"
    aria-label="Open search"
    type="button"
  >
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="11" cy="11" r="8"></circle>
      <path d="m21 21-4.35-4.35"></path>
    </svg>
  </button>

  <div class="ai-search-overlay-{{ ai_gen_id }}"></div>

  <div class="ai-search-modal-{{ ai_gen_id }}">
    <div class="ai-search-header-{{ ai_gen_id }}">
      <h2 class="ai-search-title-{{ ai_gen_id }}">{{ block.settings.search_title }}</h2>
      <button
        class="ai-search-close-{{ ai_gen_id }}"
        aria-label="Close search"
        type="button"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>

    <form action="/search" method="get" class="ai-search-form-{{ ai_gen_id }}" role="search">
      <div class="ai-search-input-wrapper-{{ ai_gen_id }}">
        <input
          type="search"
          name="q"
          class="ai-search-input-{{ ai_gen_id }}"
          placeholder="{{ block.settings.placeholder_text }}"
          autocomplete="off"
          aria-label="Search"
        >
        <button type="submit" class="ai-search-submit-{{ ai_gen_id }}" aria-label="Submit search">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
        </button>
      </div>
    </form>
  </div>
</search-modal-{{ ai_gen_id }}>

<script>
  (function() {
    class SearchModal{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.iconButton = this.querySelector('.ai-search-icon-button-{{ ai_gen_id }}');
        this.overlay = this.querySelector('.ai-search-overlay-{{ ai_gen_id }}');
        this.modal = this.querySelector('.ai-search-modal-{{ ai_gen_id }}');
        this.closeButton = this.querySelector('.ai-search-close-{{ ai_gen_id }}');
        this.searchInput = this.querySelector('.ai-search-input-{{ ai_gen_id }}');

        this.setupEventListeners();
      }

      setupEventListeners() {
        this.iconButton.addEventListener('click', () => this.openSearch());
        this.closeButton.addEventListener('click', () => this.closeSearch());
        this.overlay.addEventListener('click', () => this.closeSearch());

        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && this.modal.classList.contains('active')) {
            this.closeSearch();
          }
        });
      }

      openSearch() {
        this.overlay.classList.add('active');
        this.modal.classList.add('active');
        document.body.style.overflow = 'hidden';
        
        setTimeout(() => {
          this.searchInput.focus();
        }, 300);
      }

      closeSearch() {
        this.overlay.classList.remove('active');
        this.modal.classList.remove('active');
        document.body.style.overflow = '';
      }
    }

    customElements.define('search-modal-{{ ai_gen_id }}', SearchModal{{ ai_gen_id }});
  })();
</script>

