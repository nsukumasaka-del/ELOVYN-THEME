{% doc %}
  @prompt
    Create a modern search results page with a clean, contemporary design. Include a prominent search bar at the top with a search icon, display search results in a grid layout with product images, titles, and prices. Add filtering options on the side, show the number of results found, include pagination for multiple pages of results, and make it fully mobile-responsive. Use modern styling with smooth animations and a professional appearance. Fix any potential code errors and ensure proper functionality.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-search-results-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    margin: 0 auto;
    padding: 40px 20px;
  }

  .ai-search-header-{{ ai_gen_id }} {
    margin-bottom: 40px;
  }

  .ai-search-bar-wrapper-{{ ai_gen_id }} {
    position: relative;
    max-width: 800px;
    margin: 0 auto 24px;
  }

  .ai-search-bar-{{ ai_gen_id }} {
    width: 100%;
    padding: 16px 56px 16px 20px;
    font-size: 16px;
    border: 2px solid {{ block.settings.search_border_color }};
    border-radius: {{ block.settings.search_border_radius }}px;
    background-color: {{ block.settings.search_bg_color }};
    color: {{ block.settings.text_color }};
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-search-bar-{{ ai_gen_id }}:focus {
    outline: none;
    border-color: {{ block.settings.accent_color }};
    box-shadow: 0 0 0 3px {{ block.settings.accent_color | color_modify: 'alpha', 0.1 }};
  }

  .ai-search-icon-{{ ai_gen_id }} {
    position: absolute;
    right: 20px;
    top: 50%;
    transform: translateY(-50%);
    width: 20px;
    height: 20px;
    color: {{ block.settings.icon_color }};
    pointer-events: none;
  }

  .ai-search-results-count-{{ ai_gen_id }} {
    text-align: center;
    font-size: 18px;
    color: {{ block.settings.text_color }};
    margin-bottom: 32px;
  }

  .ai-search-content-{{ ai_gen_id }} {
    display: flex;
    gap: 32px;
    align-items: flex-start;
  }

  .ai-search-filters-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: 250px;
    background-color: {{ block.settings.filter_bg_color }};
    padding: 24px;
    border-radius: {{ block.settings.card_border_radius }}px;
    border: 1px solid {{ block.settings.filter_border_color }};
  }

  .ai-filter-title-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 16px;
    color: {{ block.settings.text_color }};
  }

  .ai-filter-group-{{ ai_gen_id }} {
    margin-bottom: 24px;
  }

  .ai-filter-group-title-{{ ai_gen_id }} {
    font-size: 14px;
    font-weight: 600;
    margin: 0 0 12px;
    color: {{ block.settings.text_color }};
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-filter-option-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    margin-bottom: 8px;
  }

  .ai-filter-checkbox-{{ ai_gen_id }} {
    margin-right: 8px;
    cursor: pointer;
    accent-color: {{ block.settings.accent_color }};
  }

  .ai-filter-label-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    cursor: pointer;
  }

  .ai-search-results-grid-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .ai-products-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.products_per_row }}, 1fr);
    gap: 24px;
    margin-bottom: 40px;
  }

  .ai-product-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_bg_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    border: 1px solid {{ block.settings.card_border_color }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-decoration: none;
    display: block;
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .ai-product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .ai-product-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover .ai-product-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-product-info-{{ ai_gen_id }} {
    padding: 16px;
  }

  .ai-product-title-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 8px;
    color: {{ block.settings.text_color }};
    line-height: 1.4;
  }

  .ai-product-price-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 700;
    color: {{ block.settings.price_color }};
  }

  .ai-pagination-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    margin-top: 40px;
  }

  .ai-pagination-button-{{ ai_gen_id }} {
    padding: 10px 16px;
    background-color: {{ block.settings.pagination_bg_color }};
    color: {{ block.settings.pagination_text_color }};
    border: 1px solid {{ block.settings.pagination_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
    font-size: 14px;
    font-weight: 500;
  }

  .ai-pagination-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.accent_color }};
    color: #ffffff;
    transform: translateY(-2px);
  }

  .ai-pagination-button-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.accent_color }};
    color: #ffffff;
    border-color: {{ block.settings.accent_color }};
  }

  .ai-pagination-button-{{ ai_gen_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .ai-pagination-button-{{ ai_gen_id }}:disabled:hover {
    background-color: {{ block.settings.pagination_bg_color }};
    color: {{ block.settings.pagination_text_color }};
    transform: none;
  }

  .ai-no-results-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.text_color }};
  }

  .ai-no-results-icon-{{ ai_gen_id }} {
    width: 80px;
    height: 80px;
    margin: 0 auto 24px;
    opacity: 0.3;
  }

  .ai-no-results-title-{{ ai_gen_id }} {
    font-size: 24px;
    font-weight: 600;
    margin: 0 0 12px;
  }

  .ai-no-results-text-{{ ai_gen_id }} {
    font-size: 16px;
    opacity: 0.7;
  }

  @media screen and (max-width: 989px) {
    .ai-search-content-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-search-filters-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-products-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-search-results-{{ ai_gen_id }} {
      padding: 24px 16px;
    }

    .ai-search-header-{{ ai_gen_id }} {
      margin-bottom: 24px;
    }

    .ai-search-bar-{{ ai_gen_id }} {
      padding: 14px 48px 14px 16px;
      font-size: 14px;
    }

    .ai-search-icon-{{ ai_gen_id }} {
      right: 16px;
      width: 18px;
      height: 18px;
    }

    .ai-search-results-count-{{ ai_gen_id }} {
      font-size: 16px;
      margin-bottom: 24px;
    }

    .ai-search-content-{{ ai_gen_id }} {
      gap: 24px;
    }

    .ai-search-filters-{{ ai_gen_id }} {
      padding: 20px;
    }

    .ai-products-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 16px;
      margin-bottom: 32px;
    }

    .ai-product-info-{{ ai_gen_id }} {
      padding: 12px;
    }

    .ai-product-title-{{ ai_gen_id }} {
      font-size: 14px;
    }

    .ai-product-price-{{ ai_gen_id }} {
      font-size: 16px;
    }

    .ai-pagination-{{ ai_gen_id }} {
      gap: 6px;
      margin-top: 32px;
    }

    .ai-pagination-button-{{ ai_gen_id }} {
      padding: 8px 12px;
      font-size: 13px;
    }
  }
{% endstyle %}

<search-results-{{ ai_gen_id }} class="ai-search-results-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-search-header-{{ ai_gen_id }}">
    <div class="ai-search-bar-wrapper-{{ ai_gen_id }}">
      <input
        type="search"
        class="ai-search-bar-{{ ai_gen_id }}"
        placeholder="{{ block.settings.search_placeholder }}"
        aria-label="Search products"
      >
      <svg class="ai-search-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.35-4.35"></path>
      </svg>
    </div>
    <div class="ai-search-results-count-{{ ai_gen_id }}">
      <span class="ai-results-count-text-{{ ai_gen_id }}"></span>
    </div>
  </div>

  <div class="ai-search-content-{{ ai_gen_id }}">
    {% if block.settings.show_filters %}
      <aside class="ai-search-filters-{{ ai_gen_id }}">
        <h3 class="ai-filter-title-{{ ai_gen_id }}">{{ block.settings.filter_title }}</h3>
        
        <div class="ai-filter-group-{{ ai_gen_id }}">
          <h4 class="ai-filter-group-title-{{ ai_gen_id }}">{{ block.settings.filter_category_title }}</h4>
          <div class="ai-filter-option-{{ ai_gen_id }}">
            <input type="checkbox" id="filter-all-{{ ai_gen_id }}" class="ai-filter-checkbox-{{ ai_gen_id }}" value="all" checked>
            <label for="filter-all-{{ ai_gen_id }}" class="ai-filter-label-{{ ai_gen_id }}">All Products</label>
          </div>
          {% for collection in collections limit: 5 %}
            <div class="ai-filter-option-{{ ai_gen_id }}">
              <input type="checkbox" id="filter-{{ collection.handle }}-{{ ai_gen_id }}" class="ai-filter-checkbox-{{ ai_gen_id }}" value="{{ collection.handle }}">
              <label for="filter-{{ collection.handle }}-{{ ai_gen_id }}" class="ai-filter-label-{{ ai_gen_id }}">{{ collection.title }}</label>
            </div>
          {% endfor %}
        </div>

        <div class="ai-filter-group-{{ ai_gen_id }}">
          <h4 class="ai-filter-group-title-{{ ai_gen_id }}">{{ block.settings.filter_price_title }}</h4>
          <div class="ai-filter-option-{{ ai_gen_id }}">
            <input type="checkbox" id="filter-price-1-{{ ai_gen_id }}" class="ai-filter-checkbox-{{ ai_gen_id }}" value="0-50">
            <label for="filter-price-1-{{ ai_gen_id }}" class="ai-filter-label-{{ ai_gen_id }}">Under {{ 5000 | money }}</label>
          </div>
          <div class="ai-filter-option-{{ ai_gen_id }}">
            <input type="checkbox" id="filter-price-2-{{ ai_gen_id }}" class="ai-filter-checkbox-{{ ai_gen_id }}" value="50-100">
            <label for="filter-price-2-{{ ai_gen_id }}" class="ai-filter-label-{{ ai_gen_id }}">{{ 5000 | money }} - {{ 10000 | money }}</label>
          </div>
          <div class="ai-filter-option-{{ ai_gen_id }}">
            <input type="checkbox" id="filter-price-3-{{ ai_gen_id }}" class="ai-filter-checkbox-{{ ai_gen_id }}" value="100-200">
            <label for="filter-price-3-{{ ai_gen_id }}" class="ai-filter-label-{{ ai_gen_id }}">{{ 10000 | money }} - {{ 20000 | money }}</label>
          </div>
          <div class="ai-filter-option-{{ ai_gen_id }}">
            <input type="checkbox" id="filter-price-4-{{ ai_gen_id }}" class="ai-filter-checkbox-{{ ai_gen_id }}" value="200+">
            <label for="filter-price-4-{{ ai_gen_id }}" class="ai-filter-label-{{ ai_gen_id }}">Over {{ 20000 | money }}</label>
          </div>
        </div>
      </aside>
    {% endif %}

    <div class="ai-search-results-grid-{{ ai_gen_id }}">
      <div class="ai-products-grid-{{ ai_gen_id }}">
        {% if block.settings.collection != blank %}
          {% for product in block.settings.collection.products limit: block.settings.products_limit %}
            <a href="{{ product.url }}" class="ai-product-card-{{ ai_gen_id }}">
              <div class="ai-product-image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-product-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% else %}
                  <div class="ai-product-image-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>
              <div class="ai-product-info-{{ ai_gen_id }}">
                <h3 class="ai-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
                <div class="ai-product-price-{{ ai_gen_id }}">{{ product.price | money }}</div>
              </div>
            </a>
          {% endfor %}
        {% else %}
          {% for i in (1..8) %}
            <div class="ai-product-card-{{ ai_gen_id }}">
              <div class="ai-product-image-wrapper-{{ ai_gen_id }}">
                <div class="ai-product-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              </div>
              <div class="ai-product-info-{{ ai_gen_id }}">
                <h3 class="ai-product-title-{{ ai_gen_id }}">Sample Product {{ i }}</h3>
                <div class="ai-product-price-{{ ai_gen_id }}">{{ 9999 | money }}</div>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      </div>

      <div class="ai-no-results-{{ ai_gen_id }}" style="display: none;">
        <svg class="ai-no-results-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
        <h3 class="ai-no-results-title-{{ ai_gen_id }}">{{ block.settings.no_results_title }}</h3>
        <p class="ai-no-results-text-{{ ai_gen_id }}">{{ block.settings.no_results_text }}</p>
      </div>

      {% if block.settings.show_pagination %}
        <div class="ai-pagination-{{ ai_gen_id }}">
          <button class="ai-pagination-button-{{ ai_gen_id }}" data-page="prev" disabled>Previous</button>
          <button class="ai-pagination-button-{{ ai_gen_id }} active" data-page="1">1</button>
          <button class="ai-pagination-button-{{ ai_gen_id }}" data-page="2">2</button>
          <button class="ai-pagination-button-{{ ai_gen_id }}" data-page="3">3</button>
          <button class="ai-pagination-button-{{ ai_gen_id }}" data-page="next">Next</button>
        </div>
      {% endif %}
    </div>
  </div>
</search-results-{{ ai_gen_id }}>

<script>
  (function() {
    class SearchResults{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentPage = 1;
        this.totalPages = 3;
        this.allProducts = [];
        this.filteredProducts = [];
      }

      connectedCallback() {
        this.searchInput = this.querySelector('.ai-search-bar-{{ ai_gen_id }}');
        this.resultsCountText = this.querySelector('.ai-results-count-text-{{ ai_gen_id }}');
        this.productsGrid = this.querySelector('.ai-products-grid-{{ ai_gen_id }}');
        this.noResults = this.querySelector('.ai-no-results-{{ ai_gen_id }}');
        this.paginationButtons = this.querySelectorAll('.ai-pagination-button-{{ ai_gen_id }}');
        this.filterCheckboxes = this.querySelectorAll('.ai-filter-checkbox-{{ ai_gen_id }}');

        this.collectProducts();
        this.updateResultsCount();
        this.setupEventListeners();
      }

      collectProducts() {
        const productCards = this.querySelectorAll('.ai-product-card-{{ ai_gen_id }}');
        this.allProducts = Array.from(productCards).map(card => {
          const title = card.querySelector('.ai-product-title-{{ ai_gen_id }}')?.textContent.toLowerCase() || '';
          const priceText = card.querySelector('.ai-product-price-{{ ai_gen_id }}')?.textContent || '';
          const priceMatch = priceText.match(/[\d,]+/);
          const price = priceMatch ? parseFloat(priceMatch[0].replace(/,/g, '')) : 0;
          
          return {
            element: card,
            title: title,
            price: price,
            visible: true
          };
        });
        this.filteredProducts = [...this.allProducts];
      }

      setupEventListeners() {
        if (this.searchInput) {
          this.searchInput.addEventListener('input', () => this.handleSearch());
        }

        this.paginationButtons.forEach(button => {
          button.addEventListener('click', (e) => this.handlePagination(e));
        });

        this.filterCheckboxes.forEach(checkbox => {
          checkbox.addEventListener('change', () => this.handleFilters());
        });
      }

      handleSearch() {
        const searchTerm = this.searchInput.value.toLowerCase().trim();
        
        this.filteredProducts = this.allProducts.filter(product => {
          return product.title.includes(searchTerm);
        });

        this.currentPage = 1;
        this.updateDisplay();
      }

      handleFilters() {
        const checkedFilters = Array.from(this.filterCheckboxes)
          .filter(cb => cb.checked)
          .map(cb => cb.value);

        if (checkedFilters.length === 0 || checkedFilters.includes('all')) {
          this.filteredProducts = [...this.allProducts];
        } else {
          this.filteredProducts = this.allProducts.filter(product => {
            return checkedFilters.some(filter => {
              if (filter.includes('-')) {
                const [min, max] = filter.split('-').map(v => v === '+' ? Infinity : parseFloat(v) * 100);
                return product.price >= min && (max === Infinity || product.price <= max);
              }
              return true;
            });
          });
        }

        this.currentPage = 1;
        this.updateDisplay();
      }

      handlePagination(e) {
        const page = e.target.dataset.page;
        
        if (page === 'prev' && this.currentPage > 1) {
          this.currentPage--;
        } else if (page === 'next' && this.currentPage < this.totalPages) {
          this.currentPage++;
        } else if (!isNaN(page)) {
          this.currentPage = parseInt(page);
        }

        this.updateDisplay();
        this.updatePaginationButtons();
        this.scrollToTop();
      }

      updateDisplay() {
        this.allProducts.forEach(product => {
          product.element.style.display = 'none';
        });

        if (this.filteredProducts.length === 0) {
          if (this.productsGrid) this.productsGrid.style.display = 'none';
          if (this.noResults) this.noResults.style.display = 'block';
        } else {
          if (this.productsGrid) this.productsGrid.style.display = 'grid';
          if (this.noResults) this.noResults.style.display = 'none';

          this.filteredProducts.forEach(product => {
            product.element.style.display = 'block';
          });
        }

        this.updateResultsCount();
      }

      updateResultsCount() {
        if (this.resultsCountText) {
          const count = this.filteredProducts.length;
          const searchTerm = this.searchInput?.value.trim();
          
          if (searchTerm) {
            this.resultsCountText.textContent = `${count} result${count !== 1 ? 's' : ''} found for "${searchTerm}"`;
          } else {
            this.resultsCountText.textContent = `${count} product${count !== 1 ? 's' : ''} found`;
          }
        }
      }

      updatePaginationButtons() {
        this.paginationButtons.forEach(button => {
          const page = button.dataset.page;
          
          if (page === 'prev') {
            button.disabled = this.currentPage === 1;
          } else if (page === 'next') {
            button.disabled = this.currentPage === this.totalPages;
          } else if (!isNaN(page)) {
            if (parseInt(page) === this.currentPage) {
              button.classList.add('active');
            } else {
              button.classList.remove('active');
            }
          }
        });
      }

      scrollToTop() {
        this.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    }

    customElements.define('search-results-{{ ai_gen_id }}', SearchResults{{ ai_gen_id }});
  })();
</script>

