{% doc %}
  @prompt
    Create a search bar section with a search icon that can be added to the header or any page. The search bar should have a clean, modern design with a search icon button. When customers type in the search field, it should search products, collections, and pages on the store. Include a placeholder text like "Search our store..." and make it mobile-responsive., Please move the search bar to the header. Please make it modern. Only the search icon to show up., Search icon is not appearing on the header section.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-header-search-{{ ai_gen_id }} {
    display: inline-block;
    position: relative;
    height: 100%;
  }

  .ai-header-search__wrapper-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    align-items: center;
    height: 100%;
  }

  .ai-header-search__toggle-{{ ai_gen_id }} {
    background: transparent;
    border: none;
    padding: 8px;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.icon_color }};
    transition: color 0.2s ease;
    height: 40px;
    width: 40px;
  }

  .ai-header-search__toggle-{{ ai_gen_id }}:hover {
    color: {{ block.settings.icon_hover_color }};
  }

  .ai-header-search__icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    display: block;
  }

  .ai-header-search__close-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    display: none;
  }

  .ai-header-search-{{ ai_gen_id }}.search-active .ai-header-search__icon-{{ ai_gen_id }} {
    display: none;
  }

  .ai-header-search-{{ ai_gen_id }}.search-active .ai-header-search__close-icon-{{ ai_gen_id }} {
    display: block;
  }

  .ai-header-search__form-container-{{ ai_gen_id }} {
    position: fixed;
    left: 50%;
    top: 100px;
    transform: translateX(-50%);
    width: 90%;
    max-width: 600px;
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transition: opacity 0.3s ease, visibility 0.3s ease, top 0.3s ease;
    z-index: 9999;
  }

  .ai-header-search__form-container-{{ ai_gen_id }}.active {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
    top: 120px;
  }

  .ai-header-search__overlay-{{ ai_gen_id }} {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    z-index: 9998;
  }

  .ai-header-search__overlay-{{ ai_gen_id }}.active {
    opacity: 1;
    visibility: visible;
  }

  .ai-header-search__form-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    background-color: {{ block.settings.background_color }};
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    overflow: hidden;
  }

  .ai-header-search__input-{{ ai_gen_id }} {
    flex: 1;
    padding: {{ block.settings.input_padding }}px {{ block.settings.input_padding | plus: 4 }}px;
    font-size: {{ block.settings.font_size }}px;
    border: none;
    background: transparent;
    color: {{ block.settings.text_color }};
    outline: none;
  }

  .ai-header-search__input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.placeholder_color }};
  }

  .ai-header-search__submit-{{ ai_gen_id }} {
    background: transparent;
    border: none;
    padding: {{ block.settings.input_padding }}px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.icon_color }};
  }

  .ai-header-search__submit-{{ ai_gen_id }}:hover {
    color: {{ block.settings.icon_hover_color }};
  }

  .ai-header-search__submit-icon-{{ ai_gen_id }} {
    width: 20px;
    height: 20px;
  }

  @media screen and (max-width: 749px) {
    .ai-header-search__form-container-{{ ai_gen_id }} {
      width: 95%;
      top: 80px;
    }

    .ai-header-search__form-container-{{ ai_gen_id }}.active {
      top: 100px;
    }

    .ai-header-search__input-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<header-search-{{ ai_gen_id }} class="ai-header-search-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-header-search__wrapper-{{ ai_gen_id }}">
    <button type="button" class="ai-header-search__toggle-{{ ai_gen_id }}" aria-label="Open search" aria-expanded="false">
      <svg class="ai-header-search__icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.35-4.35"></path>
      </svg>
      <svg class="ai-header-search__close-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
  </div>

  <div class="ai-header-search__overlay-{{ ai_gen_id }}"></div>

  <div class="ai-header-search__form-container-{{ ai_gen_id }}">
    <form action="{{ routes.search_url }}" method="get" role="search" class="ai-header-search__form-{{ ai_gen_id }}">
      <input
        type="search"
        name="q"
        class="ai-header-search__input-{{ ai_gen_id }}"
        placeholder="{{ block.settings.placeholder_text }}"
        aria-label="Search"
        autocomplete="off"
      >
      <input type="hidden" name="type" value="{{ block.settings.search_type }}">
      <button type="submit" class="ai-header-search__submit-{{ ai_gen_id }}" aria-label="Submit search">
        <svg class="ai-header-search__submit-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
      </button>
    </form>
  </div>
</header-search-{{ ai_gen_id }}>

<script>
  (function() {
    class HeaderSearch{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.isActive = false;
      }

      connectedCallback() {
        this.toggleButton = this.querySelector('.ai-header-search__toggle-{{ ai_gen_id }}');
        this.formContainer = this.querySelector('.ai-header-search__form-container-{{ ai_gen_id }}');
        this.overlay = this.querySelector('.ai-header-search__overlay-{{ ai_gen_id }}');
        this.searchInput = this.querySelector('.ai-header-search__input-{{ ai_gen_id }}');

        this.toggleButton.addEventListener('click', this.toggleSearch.bind(this));
        this.overlay.addEventListener('click', this.closeSearch.bind(this));
        document.addEventListener('keydown', this.handleEscape.bind(this));
      }

      toggleSearch(event) {
        event.preventDefault();
        event.stopPropagation();
        
        this.isActive = !this.isActive;

        if (this.isActive) {
          this.openSearch();
        } else {
          this.closeSearch();
        }
      }

      openSearch() {
        this.classList.add('search-active');
        this.formContainer.classList.add('active');
        this.overlay.classList.add('active');
        this.toggleButton.setAttribute('aria-expanded', 'true');
        this.toggleButton.setAttribute('aria-label', 'Close search');
        document.body.style.overflow = 'hidden';
        
        setTimeout(() => {
          this.searchInput.focus();
        }, 100);
      }

      closeSearch() {
        this.isActive = false;
        this.classList.remove('search-active');
        this.formContainer.classList.remove('active');
        this.overlay.classList.remove('active');
        this.toggleButton.setAttribute('aria-expanded', 'false');
        this.toggleButton.setAttribute('aria-label', 'Open search');
        document.body.style.overflow = '';
        this.searchInput.value = '';
      }

      handleEscape(event) {
        if (event.key === 'Escape' && this.isActive) {
          this.closeSearch();
        }
      }
    }

    customElements.define('header-search-{{ ai_gen_id }}', HeaderSearch{{ ai_gen_id }});
  })();
</script>

