{% doc %}
  @prompt
    Please fix my search results page. Modify it and make it modern.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-search-results-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 60px 20px;
  }

  .ai-search-results__header-{{ ai_gen_id }} {
    margin-bottom: 40px;
  }

  .ai-search-results__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 12px;
    font-weight: 600;
  }

  .ai-search-results__query-{{ ai_gen_id }} {
    font-size: 18px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
  }

  .ai-search-results__count-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
    margin-top: 8px;
  }

  .ai-search-results__filters-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    margin-bottom: 32px;
    flex-wrap: wrap;
  }

  .ai-search-results__filter-btn-{{ ai_gen_id }} {
    padding: 10px 20px;
    border: 1px solid {{ block.settings.filter_border_color }};
    background: {{ block.settings.filter_bg_color }};
    color: {{ block.settings.filter_text_color }};
    border-radius: {{ block.settings.border_radius }}px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 14px;
  }

  .ai-search-results__filter-btn-{{ ai_gen_id }}:hover {
    background: {{ block.settings.filter_hover_bg }};
    border-color: {{ block.settings.filter_hover_border }};
  }

  .ai-search-results__filter-btn-{{ ai_gen_id }}.active {
    background: {{ block.settings.filter_active_bg }};
    color: {{ block.settings.filter_active_text }};
    border-color: {{ block.settings.filter_active_bg }};
  }

  .ai-search-results__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-bottom: 40px;
  }

  .ai-search-results__item-{{ ai_gen_id }} {
    background: {{ block.settings.card_bg_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid {{ block.settings.card_border_color }};
  }

  .ai-search-results__item-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .ai-search-results__item-link-{{ ai_gen_id }} {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .ai-search-results__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    background: #f5f5f5;
    overflow: hidden;
  }

  .ai-search-results__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-search-results__badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    right: 12px;
    background: {{ block.settings.badge_bg_color }};
    color: {{ block.settings.badge_text_color }};
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
  }

  .ai-search-results__content-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-search-results__type-{{ ai_gen_id }} {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: {{ block.settings.type_color }};
    margin-bottom: 8px;
    font-weight: 600;
  }

  .ai-search-results__item-title-{{ ai_gen_id }} {
    font-size: 18px;
    color: {{ block.settings.title_color }};
    margin: 0 0 8px;
    font-weight: 600;
    line-height: 1.4;
  }

  .ai-search-results__item-text-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    line-height: 1.6;
    margin-bottom: 12px;
  }

  .ai-search-results__price-{{ ai_gen_id }} {
    font-size: 20px;
    color: {{ block.settings.price_color }};
    font-weight: 600;
  }

  .ai-search-results__empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 80px 20px;
  }

  .ai-search-results__empty-icon-{{ ai_gen_id }} {
    width: 80px;
    height: 80px;
    margin: 0 auto 24px;
    opacity: 0.3;
  }

  .ai-search-results__empty-title-{{ ai_gen_id }} {
    font-size: 24px;
    color: {{ block.settings.title_color }};
    margin: 0 0 12px;
  }

  .ai-search-results__empty-text-{{ ai_gen_id }} {
    font-size: 16px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
  }

  .ai-search-results__pagination-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 40px;
  }

  .ai-search-results__page-btn-{{ ai_gen_id }} {
    padding: 10px 16px;
    border: 1px solid {{ block.settings.filter_border_color }};
    background: {{ block.settings.filter_bg_color }};
    color: {{ block.settings.filter_text_color }};
    border-radius: {{ block.settings.border_radius }}px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 14px;
  }

  .ai-search-results__page-btn-{{ ai_gen_id }}:hover {
    background: {{ block.settings.filter_hover_bg }};
  }

  .ai-search-results__page-btn-{{ ai_gen_id }}.active {
    background: {{ block.settings.filter_active_bg }};
    color: {{ block.settings.filter_active_text }};
    border-color: {{ block.settings.filter_active_bg }};
  }

  @media screen and (max-width: 989px) {
    .ai-search-results__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-search-results-{{ ai_gen_id }} {
      padding: 40px 16px;
    }

    .ai-search-results__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: 20px;
    }

    .ai-search-results__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<search-results-{{ ai_gen_id }} class="ai-search-results-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-search-results__header-{{ ai_gen_id }}">
    <h1 class="ai-search-results__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
    {% if search.performed %}
      <p class="ai-search-results__query-{{ ai_gen_id }}">
        Results for "<strong>{{ search.terms }}</strong>"
      </p>
      <p class="ai-search-results__count-{{ ai_gen_id }}">
        {{ search.results_count }} {% if search.results_count == 1 %}result{% else %}results{% endif %} found
      </p>
    {% endif %}
  </div>

  {% if search.performed %}
    {% if block.settings.show_filters %}
      <div class="ai-search-results__filters-{{ ai_gen_id }}">
        <button class="ai-search-results__filter-btn-{{ ai_gen_id }} active" data-filter="all">
          All
        </button>
        <button class="ai-search-results__filter-btn-{{ ai_gen_id }}" data-filter="product">
          Products
        </button>
        <button class="ai-search-results__filter-btn-{{ ai_gen_id }}" data-filter="article">
          Articles
        </button>
        <button class="ai-search-results__filter-btn-{{ ai_gen_id }}" data-filter="page">
          Pages
        </button>
      </div>
    {% endif %}

    {% if search.results_count > 0 %}
      <div class="ai-search-results__grid-{{ ai_gen_id }}">
        {% for item in search.results %}
          <div class="ai-search-results__item-{{ ai_gen_id }}" data-type="{{ item.object_type }}">
            <a href="{{ item.url }}" class="ai-search-results__item-link-{{ ai_gen_id }}">
              <div class="ai-search-results__image-wrapper-{{ ai_gen_id }}">
                {% if item.object_type == 'product' and item.featured_image %}
                  <img
                    src="{{ item.featured_image | image_url: width: 600 }}"
                    alt="{{ item.featured_image.alt | escape }}"
                    class="ai-search-results__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                  {% if item.available == false %}
                    <span class="ai-search-results__badge-{{ ai_gen_id }}">Sold Out</span>
                  {% elsif item.compare_at_price > item.price %}
                    <span class="ai-search-results__badge-{{ ai_gen_id }}">Sale</span>
                  {% endif %}
                {% elsif item.object_type == 'article' and item.image %}
                  <img
                    src="{{ item.image | image_url: width: 600 }}"
                    alt="{{ item.image.alt | escape }}"
                    class="ai-search-results__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% else %}
                  <div class="ai-search-results__image-placeholder-{{ ai_gen_id }}">
                    {{ 'image' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>

              <div class="ai-search-results__content-{{ ai_gen_id }}">
                <div class="ai-search-results__type-{{ ai_gen_id }}">
                  {{ item.object_type }}
                </div>
                <h3 class="ai-search-results__item-title-{{ ai_gen_id }}">
                  {{ item.title }}
                </h3>
                {% if item.object_type == 'product' %}
                  {% if block.settings.show_description and item.content != blank %}
                    <div class="ai-search-results__item-text-{{ ai_gen_id }}">
                      {{ item.content | strip_html | truncate: 100 }}
                    </div>
                  {% endif %}
                  <div class="ai-search-results__price-{{ ai_gen_id }}">
                    {{ item.price | money }}
                  </div>
                {% elsif item.object_type == 'article' %}
                  {% if block.settings.show_description and item.content != blank %}
                    <div class="ai-search-results__item-text-{{ ai_gen_id }}">
                      {{ item.content | strip_html | truncate: 120 }}
                    </div>
                  {% endif %}
                {% elsif item.object_type == 'page' %}
                  {% if block.settings.show_description and item.content != blank %}
                    <div class="ai-search-results__item-text-{{ ai_gen_id }}">
                      {{ item.content | strip_html | truncate: 120 }}
                    </div>
                  {% endif %}
                {% endif %}
              </div>
            </a>
          </div>
        {% endfor %}
      </div>

      {% if paginate.pages > 1 %}
        <div class="ai-search-results__pagination-{{ ai_gen_id }}">
          {% if paginate.previous %}
            <a href="{{ paginate.previous.url }}" class="ai-search-results__page-btn-{{ ai_gen_id }}">
              Previous
            </a>
          {% endif %}

          {% for part in paginate.parts %}
            {% if part.is_link %}
              <a href="{{ part.url }}" class="ai-search-results__page-btn-{{ ai_gen_id }}">
                {{ part.title }}
              </a>
            {% else %}
              <span class="ai-search-results__page-btn-{{ ai_gen_id }} active">
                {{ part.title }}
              </span>
            {% endif %}
          {% endfor %}

          {% if paginate.next %}
            <a href="{{ paginate.next.url }}" class="ai-search-results__page-btn-{{ ai_gen_id }}">
              Next
            </a>
          {% endif %}
        </div>
      {% endif %}
    {% else %}
      <div class="ai-search-results__empty-{{ ai_gen_id }}">
        <div class="ai-search-results__empty-icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </div>
        <h2 class="ai-search-results__empty-title-{{ ai_gen_id }}">{{ block.settings.no_results_heading }}</h2>
        <p class="ai-search-results__empty-text-{{ ai_gen_id }}">{{ block.settings.no_results_text }}</p>
      </div>
    {% endif %}
  {% else %}
    <div class="ai-search-results__empty-{{ ai_gen_id }}">
      <div class="ai-search-results__empty-icon-{{ ai_gen_id }}">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </div>
      <h2 class="ai-search-results__empty-title-{{ ai_gen_id }}">Start your search</h2>
      <p class="ai-search-results__empty-text-{{ ai_gen_id }}">Enter a search term to find products, articles, and pages</p>
    </div>
  {% endif %}
</search-results-{{ ai_gen_id }}>

<script>
  (function() {
    class SearchResults{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.filterButtons = this.querySelectorAll('.ai-search-results__filter-btn-{{ ai_gen_id }}');
        this.items = this.querySelectorAll('.ai-search-results__item-{{ ai_gen_id }}');
        this.setupFilters();
      }

      setupFilters() {
        this.filterButtons.forEach((button) => {
          button.addEventListener('click', () => {
            const filter = button.getAttribute('data-filter');
            
            this.filterButtons.forEach((btn) => btn.classList.remove('active'));
            button.classList.add('active');
            
            this.items.forEach((item) => {
              const itemType = item.getAttribute('data-type');
              
              if (filter === 'all' || itemType === filter) {
                item.style.display = 'block';
              } else {
                item.style.display = 'none';
              }
            });
          });
        });
      }
    }

    customElements.define('search-results-{{ ai_gen_id }}', SearchResults{{ ai_gen_id }});
  })();
</script>

